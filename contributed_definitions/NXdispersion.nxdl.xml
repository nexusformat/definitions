<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" category="base" name="NXdispersion" extends="NXobject" type="group" xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd">
    <doc>
         A dispersion denoting a sum of different dispersions.
         All NXdispersion_table and NXdispersion_function groups will be added together
         to form a single dispersion.
    </doc>
    <field name="model_name" type="NX_CHAR">
        <doc>
             The name of the composite model.
        </doc>
    </field>
    <group type="NXdispersion_table"/>
    <group type="NXdispersion_function"/>
</definition>
