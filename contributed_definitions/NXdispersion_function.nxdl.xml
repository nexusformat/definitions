<?xml version="1.0" ?>
<?xml-stylesheet type="text/xsl" href="nxdlformat.xsl"?>
<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd" type="group" category="base" name="NXdispersion_function" extends="NXobject">
    <symbols>
        <symbol name="n_single_params">
            <doc>
                 The number of single parameters
            </doc>
        </symbol>
        <symbol name="n_repeated_params">
            <doc>
                 The number of repeated params
            </doc>
        </symbol>
    </symbols>
    <doc>
         This describes a dispersion function for a material or layer
    </doc>
    <field name="model_name" type="NX_CHAR"/>
    <field name="formula" type="NX_CHAR"/>
    <field name="convention" type="NX_CHAR">
        <doc>
             The sign convention being used (n + or - ik)
        </doc>
        <enumeration>
            <item value="n + ik"/>
            <item value="n - ik"/>
        </enumeration>
    </field>
    <field name="single_param_names" type="NX_CHAR">
        <dimensions rank="1">
            <dim index="1" value="n_single_params"/>
        </dimensions>
    </field>
    <field name="single_param_values" type="NX_NUMBER" units="NX_ANY">
        <dimensions rank="1">
            <dim index="1" value="n_single_params"/>
        </dimensions>
    </field>
    <field name="repeated_param_names" type="NX_CHAR">
        <dimensions rank="1">
            <dim index="1" value="n_repeated_params"/>
        </dimensions>
    </field>
    <field name="repeated_param_values" type="NX_NUMBER">
        <dimensions rank="1">
            <dim index="1" value="n_repeated_params"/>
        </dimensions>
    </field>
</definition>
