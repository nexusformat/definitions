<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" category="base" type="group" name="NXcs_storage" extends="NXcomponent" xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd">
    <doc>
        Base class for reporting the description of the I/O of a computer.
    </doc>
    <group type="NXcircuit">
        <field name="type" type="NX_CHAR">
            <doc>
                Qualifier for the type of storage medium used.
            </doc>
            <enumeration>
                <item value="solid_state_disk"/>
                <item value="hard_disk"/>
                <item value="optical"/>
                <item value="tape"/>
            </enumeration>
        </field>
        <field name="max_physical_capacity" type="NX_POSINT" units="NX_ANY">
            <doc>
                Total amount of data which the medium can hold.
            </doc>
        </field>
        <field name="max_read_rate" type="NX_NUMBER" units="NX_ANY">
            <doc>
                Maximum read rate of the storage medium.
            </doc>
        </field>
        <field name="max_write_rate" type="NX_NUMBER" units="NX_ANY">
            <doc>
                Maximum write rate of the storage medium.
            </doc>
        </field>
    </group>
</definition>
